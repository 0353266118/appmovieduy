<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">

    <!-- FrameLayout để xếp chồng các view lên nhau -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1. Ảnh nền -->
        <ImageView
            android:id="@+id/iv_banner_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- 2. Lớp phủ màu tím mờ -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A66A5AE0" /> <!-- Mã màu tím với độ trong suốt A6 -->

        <!-- 3. Container cho text và nút -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Watch popular\nmovies 1917" />

            <TextView
                android:id="@+id/tv_banner_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lorem ipsum dolor sit amet,\nconsectetur adipisci elit"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_watch_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:text="Watch Now"
                android:textColor="@color/movie_textColorPrimary_black" />
        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/movi_buttonColor"
        android:textStyle="bold"
        tools:text="Tên tác giả" />


    <RatingBar
        android:id="@+id/rb_review_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:numStars="10"
        android.stepSize="0.5"
        android:isIndicator="true"
        android:progressTint="#FFC107"
        android:progressBackgroundTint="#CCCCCC"
        android:secondaryProgressTint="#FFC107"
        tools:rating="8" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="4"
        android:ellipsize="end"
        tools:text="Nội dung review..." />
</LinearLayout>
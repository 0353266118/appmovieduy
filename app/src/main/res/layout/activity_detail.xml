<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/movie_backgroundColor_light"
    tools:context=".ui.detail.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Phần Header và thông tin phim cơ bản (Không thay đổi) -->
        <ImageView
            android:id="@+id/iv_backdrop"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/gradient_overlay_dark_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_favorite_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/movie_banner_background" />

        <TextView
            android:id="@+id/tv_title_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/movie_textColorPrimary_black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_backdrop"
            tools:text="Tên phim" />

        <LinearLayout
            android:id="@+id/layout_info_row1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/tv_title_detail"
            app:layout_constraintStart_toStartOf="@id/tv_title_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_title_detail">

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="4dp"
                android:drawableTint="#FFC107"
                android:gravity="center"
                android:textColor="@color/movie_textColorSecondary_grey"
                android:textSize="14sp"
                tools:text="8.7" />

            <TextView
                android:id="@+id/tv_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_link2"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/movie_textColorSecondary_grey"
                android:textSize="14sp"
                tools:text="2h 22m" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_info_row2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/tv_title_detail"
            app:layout_constraintStart_toStartOf="@id/tv_title_detail"
            app:layout_constraintTop_toBottomOf="@id/layout_info_row1">

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar2"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/movie_textColorSecondary_grey"
                android:textSize="14sp"
                tools:text="23/09/1994" />

            <TextView
                android:id="@+id/tv_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_film2"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/movie_textColorSecondary_grey"
                android:textSize="14sp"
                tools:text="Drama, Crime" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_play_trailer"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="Play Trailer"
            android:textAllCaps="false"
            android:visibility="gone"
            tools:visibility="visible"
            app:icon="@drawable/ic_play_arrow"
            app:layout_constraintEnd_toEndOf="@id/layout_info_row2"
            app:layout_constraintStart_toStartOf="@id/layout_info_row2"
            app:layout_constraintTop_toBottomOf="@id/layout_info_row2" />

        <TextView
            android:id="@+id/tv_overview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Overview"
            android:textColor="@color/movie_textColorPrimary_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_title_detail"
            app:layout_constraintTop_toBottomOf="@id/btn_play_trailer" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/movie_textColorSecondary_grey"
            app:layout_constraintEnd_toEndOf="@id/tv_title_detail"
            app:layout_constraintStart_toStartOf="@id/tv_title_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_overview_label"
            tools:text="Đây là phần mô tả của bộ phim..." />

        <TextView
            android:id="@+id/tv_cast_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cast"
            android:textColor="@color/movie_textColorPrimary_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_overview_label"
            app:layout_constraintTop_toBottomOf="@id/tv_overview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cast_label"
            tools:listitem="@layout/item_cast" />

        <!-- ================================================================ -->
        <!-- ================== PHẦN ĐƯỢC THAY ĐỔI ======================== -->
        <!-- ================================================================ -->

        <TextView
            android:id="@+id/tv_reviews_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Reviews"
            android:textColor="@color/movie_textColorPrimary_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_cast_label"
            app:layout_constraintTop_toBottomOf="@id/rv_cast" />

        <!-- Container mới để giới hạn chiều cao tối đa của RecyclerView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reviews_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintHeight_max="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_reviews_label">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:paddingHorizontal="16dp"
                android:contentDescription="List of movie reviews"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_review" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_reviews_label,reviews_container" />

        <TextView
            android:id="@+id/tv_related_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Related Movies"
            android:textColor="@color/movie_textColorPrimary_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_reviews_label"
            app:layout_constraintTop_toBottomOf="@id/reviews_container" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_similar_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_related_label"
            tools:listitem="@layout/item_movie_poster" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>